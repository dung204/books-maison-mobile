{
  "endOfLine": "auto",
  "printWidth": 80,
  "useTabs": false,
  "singleQuote": true,
  "arrowParens": "avoid",
  "tabWidth": 2,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": ["^@/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "tailwindFunctions": ["tva"]
}
